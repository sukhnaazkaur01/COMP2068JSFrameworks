<main role="main" class="container">
	<div class="starter-template">
        <form class="form-signin" method="post">
            <h1 class="h3 mb-3 font-weight-normal">Register</h1>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input name="username" class="form-control" id="username" required type="email" placeholder="Email Address*"/>
            <br />
            <label for="inputPassword" class="sr-only">Password</label>
            <input name="password" class="form-control" id="password" type="password" placeholder="Password*" required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"/>
            <br />
            <label for="inputPassword" class="sr-only">Confirm Password</label>
            <input name="confirm" class="form-control" id="confirm" type="password" placeholder="Confirm Password*"required pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"/>
            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
            <hr />
            Already have an account?
            <a href="/login" title="Login">
                Login
            </a>
        </form>
	</div>
</main><!-- /.container -->
